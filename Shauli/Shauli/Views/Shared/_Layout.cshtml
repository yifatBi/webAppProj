    <title>Ha-Blog Shel Shauli</title>
    
   

</head>
<body class="shaliBody">
   <div class="shauli">
       <div>
           
           <div id="dynamic-navbar">
               <script>
                   $(document).ready(function () {                      
                       $('#dynamic-navbar').removeClass("shaliBody");
                       $('#dynamic-navbar').removeClass("shauli");

                       $('.navbar li').hover(function () {
                           $(this).toggleClass('highlighted');                          
                       });
                   });
               
               </script>

               <!--Navigation Bar-->
               <nav class="navbar navbar-inverse">
                   <div class="container-fluid">
                       <div class="navbar-header">
                           <a class="navbar-brand" href="/poststoshow/index">Shauli's Blog</a>
                       </div>
                       <ul class="nav navbar-nav">
                           <li>@Html.ActionLink("Home", "Index", "PostsToShow")</li>
    @if (Session["Username"] != null){<li>@Html.ActionLink("New post", "Create", "Posts")</li>}
                                @if (Session["Admin"] != null && Session["Admin"].ToString().Equals("True"))
                                {
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown">
                                            Admin Options
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Edit Posts", "Index", "Posts")</li>
                                            <li>@Html.ActionLink("Edit Acounts", "Index", "AccountsManager")</li>
                                            <li>@Html.ActionLink("Edit Comments", "Index", "Comments")</li>

                                            <li>@Html.ActionLink("Edit Fans", "Index", "Fans")</li>
                                            <li>@Html.ActionLink("Tweet", "Tweet", "Tweets")</li>
                                        </ul>
                                    </li>
                                }
                                  </ul>
                       <ul class="nav navbar-nav navbar-right">
                                   @if (Session["Username"] != null)
                                   {
                                      
                                        <li><a href="/Accounts/Logout"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>

                                      @*<li>@Html.ActionLink("Logout", "Logout", "Accounts")</li>*@
                                      <li>@Html.ActionLink("Welcome " + Session["Username"] + "!", "Details", "Accounts", new { id = Session["UserID"] }, null)</li>
                                                   
                           }
                           else
                           {
                           <li><a href="/Accounts/Register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                           <li><a href="/Accounts/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                           }
                       </ul>
                   </div>
               </nav>
           </div>
       </div>

       <div class="canvas-music">
          <canvas id="myCanvas" width="300" height="80" ></canvas>
           <script>
               var c = document.getElementById("myCanvas");
               var ctx = c.getContext("2d");
               ctx.font = "30px Arial";
               ctx.fillText("Ha-Blog Shel Shauli", 10, 50);


               $('#myCanvas').mouseenter(function () {                  
                   $(this).addClass('hover');                   
                    $(this).css({cursor:'pointer'});

               });
               $('#myCanvas').mouseleave(function () {
                   $(this).removeClass('hover');
               });
               $('#myCanvas').click(function () {   
                   
               });

           </script>

           <!-- Audio #Wasnt sure if I should hide it. since it background music.-->
           <!-- but it seem resonable to leave the option for the user to stop it-->
           <audio controls>
               <source src="content/sound/Ookay-Thief.mp3" type="audio/mpeg">
               <source src="content/sound/Ookay-Thief.ogg" type="audio/ogg">
               Your browser does not support the audio element.
           </audio>
       </div>
    <section id="intro">
        <!-- Introduction -->

        <div id="mainContainer" class="container">
            <div id="myCarousel" class="carousel slide" style="margin: 0 auto" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/images/landscape-nature-clouds-cloudy.jpg" alt="Los Angeles">
                        <div class="carousel-caption">
                            <h3>Natue and Clouds</h3>
                            <p>it is always so much fun!</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Content/images/pexels-photo-139575.jpeg" alt="Chicago">
                    </div>

                    <div class="item">
                        <img src="~/Content/images/sea-bay-waterfront-beach-50594.jpeg" alt="New York">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


      
    </section>
    <!-- Search -->

    
       </div>
