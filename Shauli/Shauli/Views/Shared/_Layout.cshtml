        <img src="~/content/images/intro_shauli.png" alt="Shauli" />
    </section>
    <!-- Search -->

    <!--DatePicker Jquery Script-->
       <script>
               $(function () {
                   $("#datepicker").datepicker().on("show", function () {
                       $(this).val("@ViewBag.DateFilter");
                   });
                   $("#datepicker").datepicker("option", "dateFormat", "dd-mm-yy");
                   $("#datepicker").datepicker("option", "showAnim", "slide");
                   $("#datepicker").val("@ViewBag.DateFilter");
                  });
       </script>
       </div>
    <div id="content">
        <div id="mainContent">
            @RenderBody()
        </div>
        <aside class="shauli-aside">
            <section>
